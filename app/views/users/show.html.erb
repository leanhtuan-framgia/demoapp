<% provide :title, @user.name %>
<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.entries.any? %>
      <h3>entries (<%= @user.entries.count %>)</h3>
      <strong id="sss" class="microposts">
        <%= render @entries.order_by_time %>
      </strong>
      <%= will_paginate @entries %>
    <% end %>
  </div>
</div>
